#import <iostream>

int main() {
	std::cout << "Enter an integer: ";

	int x{ };
	std::cin >> x;

	std::cout << "Your doubled integer is: " << x * 2 << '\n';

	std::cout << "Your tripled integer is: " << x * 3;

	return 0;
}

